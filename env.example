# Admin UI credentials
ADMIN_USER=admin
ADMIN_PASSWORD=change-me
ADMIN_SESSION_SECRET=please-change
ADMIN_SESSION_COOKIE=m2m_admin_session
ADMIN_SESSION_HTTPS_ONLY=true

# OpenAI
OPENAI_API_KEY=sk-...
AGENT_MODEL=gpt-4o-mini
ORCHESTRATOR_MODEL=gpt-4o-mini
DOCS_VISION_MODEL=gpt-4.1-mini
DOCS_ENABLE_VISION=true

# Global SMTP sender (used for outgoing mail)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_STARTTLS=true
SMTP_USERNAME=sender@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=sender@example.com
# Account used to append to Sent via IMAP (optional; defaults to above username)
SMTP_SENDER_ACCOUNT=sender@example.com

# Optional IMAP defaults (per-mailbox overrides happen via admin UI store)
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_SSL=true
IMAP_USERNAME=account@example.com
IMAP_PASSWORD=your-password
IMAP_MAILBOX=INBOX

# App settings
SETTINGS_YAML=/data/settings.yaml
DATA_DIR=/data
